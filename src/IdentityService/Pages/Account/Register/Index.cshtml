@page
@model IdentityService.Pages.Register.Index

<div>
    <partial name="_ValidationSummary" />
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h2>Регистрация</h2>
                </div>
                <div class="card-body">
                    <form asp-page="/Account/Register/Index">
                        <input type="hidden" asp-for="Input.ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Input.FullName">Полное имя</label>
                            <input class="form-control" placeholder="Полное имя" asp-for="Input.FullName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Login">Логин</label>
                            <input class="form-control" placeholder="Login" asp-for="Input.Login">
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password">Пароль</label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Input.Password"
                                autocomplete="off">
                        </div>

                        <a class="pb-2 d-block" asp-page="../Login/Index"
                            asp-route-returnUrl="@Model.Input.ReturnUrl">
                            Уже зарегистритрован? Вход здесь!
                        </a>

                        <button class="btn btn-primary" name="Input.Button" value="register">Регистрация</button>
                        <button class="btn btn-secondary" name="Input.Button" value="cancel">Отмена</button>
                    </form>
                </div>
                @if(Model.RegisterSuccess)
                {
                    <div class="alert alert-success mt-2">
                        <strong>Успешная регистрация</strong> - теперь можно войти в систему.
                    </div>
                }
            </div>
        </div>
    </div>
</div>